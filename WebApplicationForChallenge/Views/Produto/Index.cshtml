@model Produto
@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>

<hr />

<div class="row">
    <div class="col">
        <h2>Cadastro</h2>
        <mensagem texto="@TempData["msg"]"></mensagem>
        <form asp-action="cadastrar">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Disponivel" />
                <label asp-for="Disponivel"></label>
            </div>
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
        </form>
    </div>
    <div class="col">
        <h2>Listagem</h2>
        <table class="table">
            <tr>
                <th>Nome</th>
                <th>Disponível</th>
            </tr>
            @foreach (var item in ViewBag.produtos)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@(item.Disponivel?"Sim":"Não")</td>
                </tr>
            }
        </table>
    </div>
</div>

